<Page x:Class="KotoKaze.Views.toolsPages.BCDPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KotoKaze.Views.toolsPages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="670"
      Title="BDCPage">

    <Grid>
        <Canvas x:Name="Base" Background="#F3F8FE" Height="350" Width="670">
            <Canvas x:Name="QuerySystemBootInformationZone" Width="120" Height="40" Canvas.Left="35" Canvas.Top="20">
                <Border Width="120" Height="40" CornerRadius="10" Background="White"/>
                <Button x:Name="QuerySystemBootInformationButton" Width="120" Height="40" Style="{StaticResource FunctionButtonStyle}" Click="QuerySystemBootInformationButton_Click"/>
                <Label Content="查看引导信息" FontWeight="Bold" FontSize="14" Padding="0,0,0,0" Width="120" Height="40" Canvas.Left="0"  BorderThickness="0" Background="Transparent" Foreground="Black" IsHitTestVisible="False"/>
            </Canvas>
        </Canvas>
    </Grid>
</Page>
