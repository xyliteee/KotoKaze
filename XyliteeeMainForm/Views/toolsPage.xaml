<Page x:Class="XyliteeeMainForm.Views.toolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XyliteeeMainForm.Views"
      mc:Ignorable="d" 
      d:DesignHeight="510" d:DesignWidth="670"
      Title="toolsPage">

    <Grid>
        <Canvas x:Name="Base" Background="#F3F8FE">
            <Canvas x:Name="DismZone" Width="80" Height="80" Canvas.Left="50" Canvas.Top="50">
                <Border Width="80" Height="80" CornerRadius="10" Background="White">
                    <Border.Effect>
                        <DropShadowEffect Color="#AAAAAA" Direction="270" ShadowDepth="0" Opacity="0.5" BlurRadius="10"/>
                    </Border.Effect>
                </Border>
                <Image Width="60" Height="60" Canvas.Left="10" Canvas.Top="10" Source="/image/icons/Setting_b.png"/>
                <Button x:Name="DismButton" Width="80" Height="80" Opacity="0" Click="DismButton_Click"/>
            </Canvas>
        </Canvas>

    </Grid>
</Page>
