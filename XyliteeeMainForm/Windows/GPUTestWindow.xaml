<Window x:Class="KotoKaze.Windows.GPUTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KotoKaze.Windows"
        xmlns:s ="clr-namespace:KotoKaze.Static" 
        mc:Ignorable="d"
        Title="GPUTestWindow" Height="720" Width="1280">
    <Window.Resources>
        <s:SizeConverter x:Key="SizeConverter"/>
    </Window.Resources>
    <Grid>
        <Canvas x:Name="Base" 
        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}" 
        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}">
            <Viewport3D x:Name="v3D" Height="720" Width="1280"/>
        </Canvas>

    </Grid>
</Window>
